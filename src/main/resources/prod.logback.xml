<?xml version="1.0" encoding="UTF-8" ?>
<configuration>

    <appender name="DebugFileAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>/mnt/log/cep-manager-debug.log</file>
        <append>true</append>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>/mnt/log/cep-manager-debug-%d.log</FileNamePattern>
            <maxHistory>5</maxHistory>
        </rollingPolicy>
        <encoder>
            <charset>UTF-8</charset>
            <Pattern>%date{ISO8601} %-5level [%thread] %logger{30} %msg%n</Pattern>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>DEBUG</level>
        </filter>
    </appender>

    <appender name="InfoFileAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>/mnt/log/cep-manager-info.log</file>
        <append>true</append>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>/mnt/log/cep-manager-info-%d.log</FileNamePattern>
            <maxHistory>10</maxHistory>
        </rollingPolicy>
        <encoder>
            <charset>UTF-8</charset>
            <Pattern>%date{ISO8601} %-5level [%thread] %logger{30} %msg%n</Pattern>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
    </appender>

    <appender name="InfoAllFileAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>/mnt/log/cep-manager-info-all.log</file>
        <append>true</append>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>/mnt/log/cep-manager-info-all-%d.log</FileNamePattern>
            <maxHistory>5</maxHistory>
        </rollingPolicy>
        <encoder>
            <charset>UTF-8</charset>
            <Pattern>%date{ISO8601} %-5level [%thread] %logger{30} %msg%n</Pattern>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
    </appender>

    <logger name="com.eyeview" level="DEBUG">
        <appender-ref ref="DebugFileAppender"/>
        <appender-ref ref="InfoFileAppender"/>
    </logger>

    <root level="DEBUG">
        <appender-ref ref="InfoAllFileAppender"/>
    </root>

</configuration>